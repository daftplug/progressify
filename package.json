{
  "name": "daftplug-progressify",
  "version": "1.0.6",
  "type": "module",
  "description": "",
  "main": "index.php",
  "scripts": {
    "development:admin-css": "npx tailwindcss -i ./admin/assets/css/admin.css -o ./admin/assets/css/admin.min.css --postcss",
    "development:admin-js": "esbuild ./admin/assets/js/dev/admin.js --target=esnext --bundle --outdir=./admin/assets/js --out-extension:.js=.min.js",
    "development:frontend-js": "esbuild ./frontend/assets/js/dev/frontend.js --target=esnext --bundle --outdir=./frontend/assets/js --out-extension:.js=.min.js",
    "dev": "run-p \"development:**\"",
    "watch:admin-css": "npm run development:admin-css -- --watch",
    "watch:admin-js": "npm run development:admin-js -- --watch",
    "watch:frontend-js": "npm run development:frontend-js -- --watch",
    "watch": "run-p \"watch:**\"",
    "production:clean": "rimraf ./dist",
    "production:make-dist": "mkdirp ./dist/daftplug-progressify",
    "production:admin-css": "npm run development:admin-css -- --minify",
    "production:admin-js": "npm run development:admin-js -- --minify",
    "production:frontend-js": "npm run development:frontend-js -- --minify",
    "production:generate-pot": "docker compose exec wordpress wp i18n make-pot /var/www/html/wp-content/plugins/daftplug-progressify /var/www/html/wp-content/plugins/daftplug-progressify/languages/daftplug-progressify.pot --ignore-domain --allow-root --exclude=node_modules/*,vendor/*",
    "production:copy-root-files": "ncp daftplug-progressify.php ./dist/daftplug-progressify/daftplug-progressify.php && ncp index.php ./dist/daftplug-progressify/index.php",
    "production:copy-folders": "ncp ./admin ./dist/daftplug-progressify/admin && ncp ./includes ./dist/daftplug-progressify/includes && ncp ./languages ./dist/daftplug-progressify/languages && ncp ./frontend ./dist/daftplug-progressify/frontend && ncp ./vendor ./dist/daftplug-progressify/vendor",
    "production:remove-admin-dev-css": "rimraf ./dist/daftplug-progressify/admin/assets/css/*-dev.css",
    "production:remove-admin-dev-js-folder": "rimraf ./dist/daftplug-progressify/admin/assets/js/dev/",
    "production:remove-frontend-dev-js-folder": "rimraf ./dist/daftplug-progressify/frontend/assets/js/dev/",
    "production:zip": "cd dist && bestzip ../dist/daftplug-progressify.zip daftplug-progressify",
    "production:remove-plugin-folder-from-dist": "rimraf ./dist/daftplug-progressify/",
    "prod": "run-s \"production:**\"",
    "lint:format": "prettier ./** --write",
    "lint": "run-p \"lint:**\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@prettier/plugin-php": "^0.22.2",
    "autoprefixer": "^10.4.19",
    "bestzip": "^2.2.1",
    "concurrently": "^8.2.2",
    "cssnano": "^7.0.1",
    "esbuild": "^0.25.1",
    "microbundle": "^0.15.1",
    "mkdirp": "^3.0.1",
    "ncp": "^2.0.0",
    "node-wp-i18n": "^1.2.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-wrap": "^0.0.4",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "replace": "^1.2.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.4.10"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "postcss-prefix-selector": "^1.16.1",
    "preline": "^2.1.0"
  }
}
