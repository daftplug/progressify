{
  "name": "daftplug-progressify",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "index.php",
  "scripts": {
    "development:watch-admin-css": "npx tailwindcss -i ./admin/assets/css/admin-dev.css -o ./admin/assets/css/admin.css --postcss --watch",
    "dev": "run-p \"development:**\"",
    "production:clean": "rimraf ./dist",
    "production:make-dist": "mkdirp ./dist/daftplug-progressify",
    "production:build-admin-css": "npx tailwindcss -i ./admin/assets/css/admin-dev.css -o ./admin/assets/css/admin.css --postcss",
    "production:build-admin-js": "microbundle -i ./admin/assets/js/dev/main.js -o ./dist/daftplug-progressify/admin/assets/js/admin.js --format modern --no-sourcemap --pkg-main false --external none",
    "production:build-frontend-js": "microbundle -i ./frontend/assets/js/dev/main.js -o ./dist/daftplug-progressify/frontend/assets/js/frontend.js --format modern --no-sourcemap --pkg-main false --external none",
    "production:copy-root-files": "ncp daftplug-progressify.php ./dist/daftplug-progressify/daftplug-progressify.php && ncp uninstall.php ./dist/daftplug-progressify/uninstall.php && ncp index.php ./dist/daftplug-progressify/index.php",
    "production:copy-folders": "ncp ./admin ./dist/daftplug-progressify/admin && ncp ./includes ./dist/daftplug-progressify/includes && ncp ./languages ./dist/daftplug-progressify/languages && ncp ./frontend ./dist/daftplug-progressify/frontend && ncp ./vendor ./dist/daftplug-progressify/vendor",
    "production:replace-admin-js-path": "replace '/dev/main.js' '/admin.js' ./dist/daftplug-progressify/admin/class-admin.php",
    "production:replace-frontend-js-path": "replace '/dev/main.js' '/frontend.js' ./dist/daftplug-progressify/frontend/class-frontend.php",
    "production:remove-admin-dev-css": "rimraf ./dist/daftplug-progressify/admin/assets/css/*-dev.css",
    "production:remove-admin-dev-js-folder": "rimraf ./dist/daftplug-progressify/admin/assets/js/dev/",
    "production:remove-frontend-dev-js-folder": "rimraf ./dist/daftplug-progressify/frontend/assets/js/dev/",
    "production:zip": "cd dist && bestzip ../dist/daftplug-progressify.zip daftplug-progressify",
    "prod": "run-s production:clean production:make-dist production:build-admin-css production:build-admin-js production:build-frontend-js production:copy-root-files production:copy-folders production:replace-admin-js-path production:replace-frontend-js-path production:remove-admin-dev-css production:remove-admin-dev-js-folder production:remove-frontend-dev-js-folder production:zip",
    "lint:format": "prettier ./** --write",
    "lint": "run-p \"lint:**\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@prettier/plugin-php": "^0.22.2",
    "autoprefixer": "^10.4.19",
    "bestzip": "^2.2.1",
    "concurrently": "^8.2.2",
    "cssnano": "^7.0.1",
    "microbundle": "^0.15.1",
    "mkdirp": "^3.0.1",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-wrap": "^0.0.4",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "replace": "^1.2.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.4.10"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "apexcharts": "^3.53.0",
    "lodash": "^4.17.21",
    "postcss-prefix-selector": "^1.16.1",
    "preline": "^2.1.0"
  }
}
