{
  "name": "daftplug-progressify",
  "version": "1.0.0",
  "description": "",
  "main": "index.php",
  "scripts": {
    "development:watch-css": "npx tailwindcss -i ./admin/assets/css/admin-dev.css -o ./admin/assets/css/admin.css --postcss --watch",
    "dev": "run-p \"development:**\"",
    "production:clean": "rimraf ./dist",
    "production:make-dist": "mkdirp ./dist/daftplug-progressify",
    "production:copy-folders": "ncp ./admin ./dist/daftplug-progressify/admin && ncp ./includes ./dist/daftplug-progressify/includes && ncp ./languages ./dist/daftplug-progressify/languages && ncp ./frontend ./dist/daftplug-progressify/frontend && ncp ./vendor ./dist/daftplug-progressify/vendor",
    "production:copy-root-files": "ncp daftplug-progressify.php ./dist/daftplug-progressify/daftplug-progressify.php && ncp uninstall.php ./dist/daftplug-progressify/uninstall.php && ncp index.php ./dist/daftplug-progressify/index.php",
    "production:build-css": "npx tailwindcss -i ./admin/assets/css/admin-dev.css -o ./admin/assets/css/admin.css --postcss",
    "production:copy-preline": "ncp ./node_modules/preline/dist/preline.js ./dist/daftplug-progressify/admin/assets/js/preline.js",
    "production:replace-prod-paths-preline": "replace 'node_modules/preline/dist/preline.js' 'admin/assets/js/preline.js' ./dist/daftplug-progressify/admin/class-admin.php",
    "production:replace-admin-prod-paths-js": "replace 'admin/assets/js/main.js' 'admin/assets/js/admin.js' ./dist/daftplug-progressify/admin/class-admin.php",
    "production:replace-frontend-prod-paths-js": "replace 'frontend/assets/js/main.js' 'frontend/assets/js/frontend.js' ./dist/daftplug-progressify/frontend/class-frontend.php",
    "production:remove-dev-css": "rimraf ./dist/daftplug-progressify/admin/assets/css/*-dev.css",
    "production:remove-admin-dev-js-folder-modules": "rimraf ./dist/daftplug-progressify/admin/assets/js/modules/",
    "production:remove-admin-dev-js-folder-components": "rimraf ./dist/daftplug-progressify/admin/assets/js/components/",
    "production:remove-frontend-dev-js-folder-modules": "rimraf ./dist/daftplug-progressify/frontend/assets/js/modules/",
    "production:remove-frontend-dev-js-folder-components": "rimraf ./dist/daftplug-progressify/frontend/assets/js/components/",
    "production:remove-admin-dev-js-file": "rimraf ./dist/daftplug-progressify/admin/assets/js/main.js",
    "production:remove-frontend-dev-js-file": "rimraf ./dist/daftplug-progressify/frontend/assets/js/main.js",
    "production:bundle-admin-js": "microbundle --entry ./admin/assets/js/main.js --output ./dist/daftplug-progressify/admin/assets/js/admin.js --no-sourcemap",
    "production:bundle-frontend-js": "microbundle --entry ./frontend/assets/js/main.js --output ./dist/daftplug-progressify/frontend/assets/js/frontend.js --no-sourcemap",
    "production:zip": "cd dist && bestzip ../dist/daftplug-progressify.zip daftplug-progressify",
    "prod": "run-s production:clean production:make-dist production:build-css production:bundle-admin-js production:bundle-frontend-js production:copy-root-files production:copy-folders production:remove-dev-css production:remove-admin-dev-js-folder-modules production:remove-admin-dev-js-folder-components production:remove-frontend-dev-js-folder-modules production:remove-frontend-dev-js-folder-components production:remove-admin-dev-js-file production:remove-frontend-dev-js-file production:copy-preline production:replace-prod-paths-preline production:replace-admin-prod-paths-js production:replace-frontend-prod-paths-js production:zip",
    "lint:format": "prettier ./** --write",
    "lint": "run-p \"lint:**\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@prettier/plugin-php": "^0.22.2",
    "autoprefixer": "^10.4.19",
    "bestzip": "^2.2.1",
    "concurrently": "^8.2.2",
    "cssnano": "^7.0.1",
    "microbundle": "^0.15.1",
    "mkdirp": "^3.0.1",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-wrap": "^0.0.4",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "replace": "^1.2.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.4.10"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "apexcharts": "^3.53.0",
    "lodash": "^4.17.21",
    "postcss-prefix-selector": "^1.16.1",
    "preline": "^2.1.0"
  }
}
